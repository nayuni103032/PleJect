<script>
	function list(e) {
		var good_a = [ "지수", "제니", "로제", "리사" ];
		var good_b = [ "빅토리아", "엠버", "루나", "크리스탈" ];
		var good_c = [ "LE", "하니", "정화", "혜린", "솔지" ];

		var d;

		if (e.value == 1) {
			d = good_a;
		} else if (e.value == 2) {
			d = good_b;
		} else if (e.value == 3) {
			d = good_c;
		}

		var target = document.getElementById("small");

		for (x in d) {
			var option = document.createElement("option");
			option.value = d[x];
			option.innerHTML = d[x];
			target.appendChild(option);
		}

	}
</script>
</head>
